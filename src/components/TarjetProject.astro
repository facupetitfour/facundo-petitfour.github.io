---
const { id, nombre, descripcion, imagen, enlace, repositorio, color } = Astro.props
---

<div
  class="rounded-lg w-full border border-gray-600/20 bg-gray-200/20 transition-all duration-300 md:flex dark:border-gray-500/30 dark:bg-gray-600/30"
>
  <a href="#">
    {
      imagen?.length > 0
        ? imagen.map((img: any) => {
            return <img class="h-full rounded-lg object-cover" src={img} alt={'Imagen ' + nombre} />
          })
        : null
    }
  </a>
  <div class="p-8">
    <a href="#">
      <h5 class="mb-2 text-xl font-bold tracking-tight">
        {nombre}
      </h5>
    </a>
    <p class="line mb-3 line-clamp-7 text-base font-normal text-gray-700 dark:text-gray-400">
      {descripcion}
    </p>
    <a
      href="#"
      class="inline-flex items-center justify-center gap-x-2 rounded-lg border-1 border-teal-200 bg-teal-500 px-4 py-2 font-medium text-white transition hover:scale-110 dark:border-blue-400 dark:bg-blue-300 dark:text-black"
    >
      Ver Proyecto
      <!-- <svg
        class="ms-2 h-3 w-3 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg> -->
    </a>
  </div>
</div>
